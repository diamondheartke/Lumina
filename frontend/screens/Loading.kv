
# LUMINA/frontend/screens/loading.kv
<LoadingScreen>:
    name: 'loading'  # Ties this rule to LoadingScreen class
    FloatLayout:
        Image:
            source: app.loading_image
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1
            pos_hint: {"x": 0, "y": 0}